{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": true,
    "baseUrl": ".",
    "sourceMap": true,
    "target": "es2019",
    "outDir": "./dist",
    "lib": [
      "es2019"
    ],
    "resolveJsonModule": true,
    "types": [
      "node",
      "jest",
      // "reflect-metadata"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "./**/*.js",
    "./**/*.ts"
  ],
  "exclude": [
    "./dist",
  ]
}
